<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/img_moreInfo_picture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="#00FFFFFF"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/camera_moto" />

                <TextView
                    android:fontFamily="@font/imhyeminbold"
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="35dp"
                    android:text="사진 추가"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageview_selected1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/imageview_selected2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/imageview_selected3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/imageview_selected4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/imageview_selected5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>
    </HorizontalScrollView>

    <EditText
        android:fontFamily="@font/imhyeminregular"
        android:id="@+id/editText_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:ems="10"
        android:hint="제목"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="20dp" />

    <EditText
        android:fontFamily="@font/imhyeminregular"
        android:id="@+id/editText_content"
        android:layout_width="match_parent"
        android:layout_height="239dp"
        android:layout_margin="20dp"
        android:background="@drawable/custom_edittext"
        android:ems="10"
        android:hint="게시글 내용을 입력해주세요."
        android:inputType="textPersonName" />
</LinearLayout>